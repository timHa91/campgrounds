 <% layout('layouts/boilerplate') %> 
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add campgrounds</a>
    </div>
        <% for (let campground of campgrounds) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%= campground.image%>">
                    </div>
                    <div class="column-mg-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %> 
                            </h5>
                            <p class="text"><%= campground.description %> </p>
                            <p class="text">
                                <small class="text-muted"><%= campground.location %></small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    